<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zywl.app.defaultx.mapper.PayOrderMapper">

   <insert id="insert" parameterType="PayOrder" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into t_pay_order
		(
               `user_id`,
               `order_no`,
               `product_id`,
		 		`price`,
               `channel_id`,
               `status`,
               `create_time`,
               `update_time`
		)
		values
		(
               #{userId},
               #{orderNo},
               #{productId},
		 		#{price},
               #{channelId},
               #{status},
               #{createTime},
               #{updateTime}

             
		)
	</insert>

	<update id="updateStatus" parameterType="PayOrder">
		update t_pay_order set status = #{status} where order_no = #{orderNo};

	</update>
	

	<delete id="delete">
		delete from t_pay_order where  id= #{id}
	</delete>
	
	<select id="findByOrderNo" resultType="PayOrder">
	    select * from t_pay_order where order_no=#{orderNo}
	</select>

	<select id="findByOrderNoAndUserId" resultType="PayOrder">
		select * from t_pay_order where order_no=#{orderNo} and user_id=#{userId}
	</select>

	<select id="findByUserIdAndPrice" resultType="PayOrder">
		select * from t_pay_order where user_id=#{userId} and status=0 and price = #{price}
	</select>

	<select id="findByUserId" resultType="PayOrder">
		select * from t_pay_order where  user_id=#{userId} and status=0
	</select>
	
	<select id="findAll" resultType="PayOrder">
	    select * from t_pay_order
	</select>
	
	
</mapper>