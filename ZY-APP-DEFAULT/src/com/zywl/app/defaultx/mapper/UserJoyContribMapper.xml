<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zywl.app.defaultx.mapper.UserJoyContribMapper">

    <!-- 通用字段映射 -->
    <resultMap id="BaseResultMap" type="com.zywl.app.base.bean.UserJoyContrib">
        <id     column="id"                property="id"/>
        <result column="receiver_user_id"  property="receiverUserId"/>
        <result column="from_user_id"      property="fromUserId"/>
        <result column="total_joy"         property="totalJoy"/>
        <result column="today_joy"         property="todayJoy"/>
        <result column="today_date"        property="todayDate"/>
        <result column="create_time"       property="createTime"/>
        <result column="update_time"       property="updateTime"/>
    </resultMap>

    <!-- 通用列 -->
    <sql id="Base_Column_List">
        id,
        receiver_user_id,
        from_user_id,
        total_joy,
        today_joy,
        today_date,
        create_time,
        update_time
    </sql>

    <!-- 主键查询 -->
    <select id="selectByPrimaryKey" parameterType="long" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_user_joy_contrib
        WHERE id = #{id}
    </select>

    <!-- 按 (receiver, from) 查询 -->
    <select id="findOneByPair" parameterType="map" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_user_joy_contrib
        WHERE receiver_user_id = #{receiverUserId}
        AND from_user_id = #{fromUserId}
        LIMIT 1
    </select>

    <!-- 新增一条汇总记录 -->
    <insert id="insert"
            parameterType="com.zywl.app.base.bean.UserJoyContrib"
            useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        INSERT INTO t_user_joy_contrib
        (receiver_user_id,
         from_user_id,
         total_joy,
         today_joy,
         today_date,
         create_time,
         update_time)
        VALUES
            (#{receiverUserId},
             #{fromUserId},
             #{totalJoy},
             #{todayJoy},
             #{todayDate},
             NOW(),
             NOW())
    </insert>

    <!-- 根据主键更新 -->
    <update id="updateByPrimaryKey"
            parameterType="com.zywl.app.base.bean.UserJoyContrib">
        UPDATE t_user_joy_contrib
        SET
            receiver_user_id = #{receiverUserId},
            from_user_id     = #{fromUserId},
            total_joy        = #{totalJoy},
            today_joy        = #{todayJoy},
            today_date       = #{todayDate},
            update_time      = NOW()
        WHERE id = #{id}
    </update>

    <!-- 按 (receiver, from) 更新 -->
    <update id="updateByPair"
            parameterType="com.zywl.app.base.bean.UserJoyContrib">
        UPDATE t_user_joy_contrib
        SET
            total_joy   = #{totalJoy},
            today_joy   = #{todayJoy},
            today_date  = #{todayDate},
            update_time = NOW()
        WHERE receiver_user_id = #{receiverUserId}
          AND from_user_id     = #{fromUserId}
    </update>

    <!-- 条件统计 -->
    <select id="countByConditions" parameterType="map" resultType="int">
        SELECT COUNT(1)
        FROM t_user_joy_contrib
        <where>
            <if test="id != null">
                AND id = #{id}
            </if>
            <if test="receiverUserId != null">
                AND receiver_user_id = #{receiverUserId}
            </if>
            <if test="fromUserId != null">
                AND from_user_id = #{fromUserId}
            </if>
            <if test="todayDate != null">
                AND today_date = #{todayDate}
            </if>
        </where>
    </select>

</mapper>
