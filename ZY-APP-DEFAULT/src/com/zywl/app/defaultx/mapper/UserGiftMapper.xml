<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zywl.app.defaultx.mapper.UserGiftMapper">

   <insert id="insert" parameterType="UserGift" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into t_user_gift
		(
               `user_id`,
               `gift_num`,
		 		`gift_type`,
               `create_time`
		)
		values
		(
               #{userId},
               #{giftNum},
		 		#{giftType},
               #{createTime}
		)
	</insert>

	<update id="addUserGiftNumber" parameterType="UserGift">
		update t_user_gift set gitf_number = gift_number+1 where user_id = #{userId}  and gift_type = #{giftType}
	</update>

	<update id="useGift" parameterType="UserGift">
		update t_user_gift set gitf_number = gift_number-1 where user_id = #{userId} and gift_number-1 &gt; 1 and gift_type = #{giftType}
	</update>

	<delete id="delete">
		delete from t_user_gift where  id= #{id}
	</delete>
	

	<select id="findAll" resultType="UserGift">
	    select * from t_user_gift
	</select>

	<select id="findUserGift" resultType="UserGift">
		select * from t_user_gift where user_id=#{userId} and gift_type=#{giftType}
	</select>


</mapper>