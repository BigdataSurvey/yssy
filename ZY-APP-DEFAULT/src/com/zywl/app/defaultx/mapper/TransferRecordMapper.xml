<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zywl.app.defaultx.mapper.TransferRecordMapper">

   <insert id="insert" parameterType="TransferRecord" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into r_transfer_record
		(
				`order_no`,
               `from_user_id`,
               `to_user_id`,
               `capital_type`,
               `amount`,
               `fee`,
               `mark`,
               `create_time`,
               `update_time`
               
		)
		values
		(
			   #{orderNo},
               #{fromUserId},
               #{toUserId},
               #{capitalType},
               #{amount},
               #{fee},
               #{mark},
               #{createTime},
               #{updateTime}
        
		)
	</insert>
	
	
	
	
	<select id="findOne" resultType="TransferRecord">
	    select * from r_transfer_record where order_no = #{orderNo} 
	</select>
	
	<select id="findByUserId" resultType="TransferRecord">
	    select * from r_transfer_record where user_id = #{userId} 
	</select>
	
	<select id="findAll" resultType="TransferRecord">
	    select * from r_transfer_record
	</select>
	
</mapper>