<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zywl.app.defaultx.mapper.TotalSignRecordMapper">

   <insert id="insert" parameterType="TotalSignRecord" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into r_total_sign_record
		(
               `user_id`,
               `total_day`,
               `reward`,
               `order_no`,
               `create_time`
               
		)
		values
		(
               #{userId},
                #{totalDay},
                #{reward},
               #{orderNo},
               #{createTime}
              
		)
	</insert>
	
	
	
	<select id="findThisMonthRecord" resultType="TotalSignRecord">
	    select * from r_total_sign_record where user_id = #{userId} and create_time &gt; #{createTime}
	</select>
	
	<select id="findAll" resultType="TotalSignRecord">
	    select * from r_total_sign_record
	</select>
	
	
	
	
	
	
	

</mapper>