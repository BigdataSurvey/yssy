<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zywl.app.defaultx.mapper.BalanceConvertRecordMapper">

   <insert id="insert" parameterType="BalanceConvertRecord" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into r_balance_convert_record
		(
               `user_id`,
                `order_no`,
                `rmb_amount`,
               `amount_received`,
               `remark`,
             	`create_time`
		)
		values
		(
               #{userId},
               #{orderNo},
              #{rmbAmount},
              #{amountReceived},
               #{remark},
               #{createTime}
             
             
             
		)
	</insert>
	
	
	
	<select id="findOne" resultType="BalanceConvertRecord">
	    select * from r_balance_convert_record where id = #{id}
	</select>
	
	<select id="findAll" resultType="BalanceConvertRecord">
	    select * from r_balance_convert_record
	</select>
	
	<sql id="conditions">
	<if test="userId != null">
   		 and user_id=#{userId}
   	</if>
   	<if test="orderNo != null">
   		 and order_no=#{orderNo}
   	</if>
   	
   		<if test="rmbAmount != null">
   		  and rmb_amount = #{rmbAmount}
   	</if>
   	
   	
	</sql>
	
	<select id="countByConditions" resultType="Long">
		select count(1) from r_balance_convert_record
		<where>
			<include refid="conditions"></include>
		</where>
	</select>
	
	<select id="findByConditions" resultType="BalanceConvertRecord">
	    select * from t_cash_record
	    <where>
	    	<include refid="conditions"></include>
	    </where>
	    
		ORDER BY create_time desc 
		<if test="start != null and limit != null">
	   	 limit #{start}, #{limit} 
	   	</if>
	</select>

</mapper>