<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zywl.app.defaultx.mapper.RecordSheetMapper">

	<select id="findAll" resultType="RecordSheet">
		select id,amount,state,create_time from r_record_sheet
	</select>

	<insert id="insert" parameterType="RecordSheet" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into r_record_sheet
		(
			`user_id`,
			`red_id`,
		 	`is_boom`,
			`name`,
		 	`head_img`,
			`amount`,
		 	`red_amount`,
			`create_time`,
			`update_time`,
			`order_no`,
			`remark`,
			`state`

		)
		values
			(
				#{userId},
				#{redId},
			 	#{isBoom},
				#{name},
			 	#{headImg},
				#{amount},
			 	#{redAmount},
				#{createTime},
				#{updateTime},
				#{orderNo},
				#{remark},
				#{state}
			)
	</insert>

	<select id="findByRedId" resultType="RecordSheet">
		select * from r_record_sheet where red_id=#{redId}
	</select>

	<select id="findByRed" resultType="RecordSheet">
		select id,remark,create_time,amount from r_record_sheet
	</select>


	<select id="findByRedUserId" resultType="RecordSheet">
		SELECT * FROM r_record_sheet WHERE user_id = #{userId}
		<if test="start != null and limit != null">
			limit #{start}, #{limit}
		</if>
	</select>
</mapper>