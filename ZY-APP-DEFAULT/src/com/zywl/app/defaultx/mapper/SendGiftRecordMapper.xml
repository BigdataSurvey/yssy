<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zywl.app.defaultx.mapper.SendGiftRecordMapper">

   <insert id="insert" parameterType="SendGiftRecord" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into r_send_gift_record
		(
               `user_id`,
               `to_user_no`,
		 		`to_user_id`,
               `number`,
               `gift_type`,
               `create_time`
               
               
		)
		values
		(
               #{userId},
               #{toUserNo},
		 		#{toUserId},
               #{number},
               #{giftType},
               #{createTime}
		)
	</insert>
	
	
	

	<select id="findByUserId" resultType="SendGiftRecord">
	    select * from r_send_gift_record where user_id = #{userId} order by id desc
		<if test="start != null and limit != null">
			limit #{start}, #{limit}
		</if>
	</select>


	<select id="findByUserIdAndSendNo" resultType="SendGiftRecord">
		select * from r_send_gift_record where user_id = #{userId} and to_user_no=#{toUserNo} order by id desc
		<if test="start != null and limit != null">
			limit #{start}, #{limit}
		</if>
	</select>

	<select id="findByToUserId" resultType="SendGiftRecordVo">
		select * from r_send_gift_record where to_user_id = #{userId}  order by id desc
		<if test="start != null and limit != null">
			limit #{start}, #{limit}
		</if>
	</select>
	

</mapper>