<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zywl.app.defaultx.mapper.UserPickGoodsMapper">


	<insert id="insert" parameterType="UserPickGoods" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into t_user_pick_goods
		(
			`user_id`,
		 	`name`,
		 	`number`,
			`order_no`,
		 	`user_name`,
		 	`phone`,
		 	`address`,
		 	`status`
		)
		values
			(
				#{userId},
			 	#{name},
			 	#{number},
				#{orderNo},
			 	#{userName},
				#{phone},
				#{address},
			 	#{status}
			)
	</insert>

	<select id="findByUserId" resultType="UserPickGoods">
	    select * from t_user_pick_goods where user_id=#{userId}
	</select>

	<select id="findById" resultType="UserPickGoods">
		select * from t_user_pick_goods where id=#{id}
	</select>


	<update id="pickGood" parameterType="UserPickGoods">
		update t_user_pick_goods set `status`=1,user_name=#{name},phone=#{phone},address=#{address} where id = #{id}
	</update>




</mapper>