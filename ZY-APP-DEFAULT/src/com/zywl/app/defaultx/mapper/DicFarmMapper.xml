<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zywl.app.defaultx.mapper.DicFarmMapper">

    <!-- 通用字段映射 -->
    <resultMap id="BaseResultMap" type="com.zywl.app.base.bean.card.DicFarm">
        <id     column="id"            property="id"/>
        <result column="seed_item_id"  property="seedItemId"/>
        <result column="reward" property="reward" jdbcType="VARCHAR"/>
        <result column="grow_seconds"  property="growSeconds"/>
        <result column="status"        property="status"/>
        <result column="create_time"   property="createTime"/>
        <result column="update_time"   property="updateTime"/>
    </resultMap>

    <!-- 通用列 -->
    <sql id="Base_Column_List">
        id,
        seed_item_id,
        reward,
        grow_seconds,
        status,
        create_time,
        update_time
    </sql>

    <!--查询所有农场种地配置-->
    <select id="findAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from dic_farm
        where status = 1
        order by seed_item_id asc
    </select>

    <!-- 主键查询-->
    <select id="selectByPrimaryKey" parameterType="long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from dic_farm
        where id = #{id}
    </select>


    <!-- 按种子ID查配置 -->
    <select id="findBySeedItemId" parameterType="int" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from dic_farm
        where seed_item_id = #{seedItemId}
        limit 1
    </select>

    <!-- 条件统计-->
    <select id="countByConditions" parameterType="map" resultType="int">
        select count(1)
        from dic_farm
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="seedItemId != null">
                and seed_item_id = #{seedItemId}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
        </where>
    </select>


</mapper>
