<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zywl.app.defaultx.mapper.KongKimBellMapper">




    <insert id="insert" parameterType="BellRecord" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into r_kongkim_bell_record
        (`id`,
         `user_id`,
         `conver_count`,
         `consume_total`,
         `create_time`
         )
        values (#{id},
                #{userId},
                #{converCount},
                #{consumeTotal},
                #{createTime})

    </insert>

    <select id="findByUserId" resultType="BellRecord">
        select * from r_kongkim_bell_record where user_id=#{userId}
    </select>


</mapper>