<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zywl.app.defaultx.mapper.CheckpointAwaitRecordMapper">

	<insert id="insert" parameterType="CheckpointAwaitRecord" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
		insert into r_checkpoint_await_record
		(
			`user_id`,
		 	`begin_time`,
			`receive_time`,
		 	`last_look_time`,
		 	`exp`,
		 	`item_info`,
		 	`status`
		)
		values
			(
				#{userId},
			 	#{beginTime},
				#{receiveTime},
			 	#{lastLookTime},
			 	#{exp},
			 	#{itemInfo},
			 	#{status}
			)
	</insert>

	<select id="findAll" resultType="CheckpointAwaitRecord">
	    select * from r_checkpoint_await_record
	</select>


	<select id="findByUserId" resultType="CheckpointAwaitRecord">
		select * from r_checkpoint_await_record where user_id=#{userId} and status=0
	</select>

	<select id="findTwoByUserId" resultType="CheckpointAwaitRecord">
		select * from r_checkpoint_await_record where user_id=#{userId} and status=0
	</select>

	<update id="updateRecord" parameterType="CheckpointAwaitRecord">
		update r_checkpoint_await_record
		<set >
			<if test="exp != null">
				`exp`= #{exp},
			</if>
			<if test="itemInfo != null">
				`item_info`= #{itemInfo},
			</if>
			<if test="lastLookTime != null">
				`last_look_time`= #{lastLookTime},
			</if>
		</set>
		where  `id`= #{id}
	</update>


	<update id="receiveBox" parameterType="CheckpointAwaitRecord">
		update r_checkpoint_await_record set receive_time = now() ,status=1
		where  `id`= #{id}
	</update>


</mapper>